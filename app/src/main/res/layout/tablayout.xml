<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_tab"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_height"
                android:padding="@dimen/pad_5dp"
                android:background="@drawable/top_stroke"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_foreign_currency"
                    android:padding="@dimen/pad_5dp"
                    android:layout_weight="1"
                    android:src="@drawable/foreign_currency"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_communication"
                    android:padding="@dimen/pad_5dp"
                    android:layout_weight="1"
                    android:src="@drawable/communication"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/pad_5dp"
                    android:layout_weight="3"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_competition"
                    android:padding="@dimen/pad_5dp"
                    android:layout_weight="1"
                    android:src="@drawable/competition"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/iv_open_data"
                    android:padding="@dimen/pad_5dp"
                    android:layout_weight="1"
                    android:src="@drawable/open_data"/>


            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_home"
            android:src="@drawable/home_icon"
            android:layout_marginBottom="@dimen/pad_5dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>
