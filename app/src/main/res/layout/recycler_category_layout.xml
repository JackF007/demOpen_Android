<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:layout_marginLeft="@dimen/pad_5dp"
    android:layout_marginRight="@dimen/pad_5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/pad_10dp"
        android:layout_margin="@dimen/pad_5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/pad_100dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/subcategory_bg"
                android:id="@+id/iv_icon1"
                />


            <ImageView
                android:layout_width="@dimen/pad_70dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:layout_margin="@dimen/pad_10dp"
                android:id="@+id/iv_icon"
                />


            <com.gaicomo.app.views.AppTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_name"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/iv_icon1"
                android:layout_marginLeft="@dimen/pad_15dp"
                android:layout_marginRight="@dimen/pad_15dp"
                android:padding="@dimen/pad_8dp"
                android:textColor="@color/welcome_color"
                android:textSize="@dimen/txt_15sp"
                android:maxLines="2"
                android:ellipsize="end"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
